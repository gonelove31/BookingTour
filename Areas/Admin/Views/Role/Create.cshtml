
@using App.Menu
@using BookingTour.Areas.Admin.Models.Role;
@inject AdminSidebarService _AdminSidebarService
@model CreateRoleModel
@{
    ViewData["Title"] = "Tạo role mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<partial name="_StatusMessage"></partial>

<hr>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary bg-[#007bff]" />
                <a class="btn btn-primary" asp-action="Index">Danh sách các role</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@{
    _AdminSidebarService.SetActive("Role", "Create", "Identity");
}

