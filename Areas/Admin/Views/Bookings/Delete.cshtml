@model BookingTour.Models.Booking
@inject TourContext _context;
@{
    ViewData["Title"] = "Xóa đặt tour";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<script src="https://cdn.tailwindcss.com"></script>
<h3 class="text-[20px] font-bold mb-[20px]">Bạn chắc chắc muốn xóa đặt chuyến du lịch này?</h3>
<div>

    <div class="max-w-[600px] flex flex-col gap-3">
        <div class="flex">
            <div class="w-[50%] font-medium">
                @Html.DisplayNameFor(model => model.CustomerID)
            </div>
            <div class="w-[50%]">
                @Html.DisplayFor(model => model.CustomerID)
            </div>
        </div>

        <div class="flex ">
            <div class="w-[50%] font-medium">
                Tên chuyến đi
            </div>
            <div class="w-[50%]">
                @{
                    var tourName = _context.tours.FirstOrDefault(t => t.Id == Model.TourID)?.Name;
                    @tourName
                }
            </div>
        </div>
        <div class="flex">
            <div class="w-[50%] font-medium">
                @Html.DisplayNameFor(model => model.BookingDate)
            </div>
            <div class="w-[50%]">
                @Html.DisplayFor(model => model.BookingDate)
            </div>
        </div>
        <div class="flex">
            <div class="w-[50%] font-medium">
                @Html.DisplayNameFor(model => model.NumberOfAdult)
            </div>
            <div class="w-[50%]">
                @Html.DisplayFor(model => model.NumberOfAdult)
            </div>
        </div>
        <div class="flex">
            <div class="w-[50%] font-medium">
                @Html.DisplayNameFor(model => model.NumberOfChildren)
            </div>
            <div class="w-[50%]">
                @Html.DisplayFor(model => model.NumberOfChildren)
            </div>
        </div>
        <div class="flex">
            <div class="w-[50%] font-medium">
                @Html.DisplayNameFor(model => model.TotalAmount)
            </div>
            <div class="w-[50%]">
                @Html.DisplayFor(model => model.TotalAmount)
            </div>
        </div>
        <div class="flex">
            <div class="w-[50%] font-medium">
                @Html.DisplayNameFor(model => model.Status)
            </div>
            <div class="w-[50%]">
                <td>
                    @if (Model.Status == 1)
                    {
                        <text>Thành công</text>
                    }
                    else if (Model.Status == 3)
                    {
                        <text>Chờ thanh toán</text>
                    }
                    else
                    {
                        <text>Đã hủy</text>
                    }
                </td>
            </div>
        </div>
        <div class="flex">
            <div class="w-[50%] font-medium">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </div>
            <div class="w-[50%]">
                @Html.DisplayFor(model => model.CreatedDate)
            </div>
        </div>
        <div class="flex">
            <div class="w-[50%] font-medium">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </div>
            <div class="w-[50%]">
                @Html.DisplayFor(model => model.CreatedBy)
            </div>
        </div>
        <div class="flex">
            <div class="w-[50%] font-medium">
                @Html.DisplayNameFor(model => model.ModifierDate)
            </div>
            <div class="w-[50%]">
                @Html.DisplayFor(model => model.ModifierDate)
            </div>
        </div>
        <div class="flex">
            <div class="w-[50%] font-medium">
                @Html.DisplayNameFor(model => model.ModifierBy)
            </div>
            <div class="w-[50%]">
                @Html.DisplayFor(model => model.ModifierBy)
            </div>
        </div>
    </div>

    <form class="mt-[24px]" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger bg-[#c82333]" /> |
        <a class="btn btn-primary" asp-action="Index">Quay lại </a>
    </form>
</div>
